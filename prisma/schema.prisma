// 1. GENERATOR (Bqa kifma howa)
generator client {
  provider = "prisma-client-js"
}
// 2. DATASOURCE (Hna fin kan l-ghalat - Daba salla7nah l Postgres)
datasource db {
 provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

// 3. MODELS (Tables dyalk kamlin)

model Product {
  id                 String   @id @default(uuid())
  name               String
  price              Float
  compareAtPrice     Float?
  description        String
  images             String
  category           String   // Main type: Hijabs, Khimars, Packs, Accessoires
  collectionName     String?  // Fabric/Collection: Soie de MÃ©dine, Jersey, etc.
  stock              Int      @default(0)
  status             String   @default("active")
  isFeatured         Boolean  @default(false)
  showOnHome         Boolean  @default(false)
  isNewArrival       Boolean  @default(false)
  isFreeShipping     Boolean  @default(false)
  colors             String?
  customCategorySlug String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}


model Order {
  id            String   @id @default(uuid())
  customerName  String
  customerEmail String?
  customerPhone String
  address       String
  city          String
  status        String   @default("En attente")
  total         Float
  items         String
  createdAt     DateTime @default(now())
}

model HomeCollection {
  id          String   @id @default(uuid())
  title       String
  imageUrl    String
  categoryKey String
  customUrl   String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Article {
  id        String   @id @default(uuid())
  title     String
  slug      String   @unique
  excerpt   String
  content   String
  image     String
  author    String
  category  String?
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HomeUnivers {
  id        String   @id @default(uuid())
  title     String
  image     String
  link      String?
  isLocked  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}