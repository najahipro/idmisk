generator client {
  provider = "prisma-client-js"
}

datasource db {

model Product {
  id          String   @id @default(uuid())
  name        String
  price       Float
  compareAtPrice Float?
  description String
  images      String   // SQLite: Comma separated string or JSON
  category    String
  stock       Int      @default(0)
  status      String   @default("active") // "active" or "draft"
  isFeatured   Boolean  @default(false)
  showOnHome   Boolean  @default(false)
  isNewArrival Boolean  @default(false)
  isFreeShipping Boolean @default(false)
  colors       String?
  customCategorySlug String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Order {
  id            String   @id @default(uuid())
  customerName  String
  customerEmail String?  // Optional for now to avoid migration issues with existing data, or default const
  customerPhone String
  address       String
  city          String
  status        String   @default("En attente") // Updated default
  total         Float
  items         String   // JSON string of items purchased
  createdAt     DateTime @default(now())
}

model HomeCollection {
  id          String   @id @default(uuid())
  title       String
  imageUrl    String
  categoryKey String
  customUrl   String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Article {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  excerpt     String
  content     String
  image       String
  author      String
  category    String?
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model HomeUnivers {
  id          String   @id @default(uuid())
  title       String
  image       String
  link        String?
  isLocked    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
