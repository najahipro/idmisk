// 1. GENERATOR
generator client {
  provider = "prisma-client-js"
}

// 2. DATASOURCE - Using SQLite for local development
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// 3. MODELS (Tables dyalk kamlin)

model Product {
  id                 String   @id @default(uuid())
  name               String
  price              Float
  compareAtPrice     Float?
  description        String
  images             String
  category           String   // Main type: Hijabs, Khimars, Packs, Accessoires
  collectionName     String?  // Fabric/Collection: Soie de Médine, Jersey, etc.
  stock              Int      @default(0)
  status             String   @default("active")
  isFeatured         Boolean  @default(false)
  showOnHome         Boolean  @default(false)
  isNewArrival       Boolean  @default(false)
  isFreeShipping     Boolean  @default(false)

  colors             Color[]
  customCategorySlug String?
  homepageLocation   String?  // 'new-in', 'vestiaire-masculin', 'la-maison', null
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Color {
  id        String    @id @default(uuid())
  name      String
  hexCode   String
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}


model Order {
  id            String   @id @default(uuid())
  customerName  String
  customerEmail String?
  customerPhone String
  address       String
  city          String
  status        String   @default("En attente")
  total         Float
  items         String
  createdAt     DateTime @default(now())
}

model HomeCollection {
  id          String   @id @default(uuid())
  title       String
  imageUrl    String
  categoryKey String
  customUrl   String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Article {
  id        String   @id @default(uuid())
  title     String
  slug      String   @unique
  excerpt   String
  content   String
  image     String
  author    String
  category  String?
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HomeLayout {
  id        String   @id @default(uuid())
  
  // 1. Hero Section (Top Main)
  heroImage       String?
  heroTitle       String?
  heroSubtitle    String?
  heroButtonText  String?  @default("Découvrir")
  
  // 2. Middle Banner
  middleImage     String?
  middleTitle     String?
  middleCategory  String?  // 'new-in', 'femme', 'homme', 'la-maison', 'accessoires', 'shop'
  
  // 3. Split Banner Left (La Maison)
  splitLeftImage    String?
  splitLeftTitle    String?
  splitLeftCategory String?
  
  // 4. Split Banner Right (Accessoires)
  splitRightImage    String?
  splitRightTitle    String?
  splitRightCategory String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  slug      String   @unique
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SiteSettings {
  id                String   @id @default(uuid())
  middleBannerImage String?
  middleBannerTitle String?
  middleBannerLink  String?
  topBarMessage1    String?
  topBarMessage2    String?
  topBarMessage3    String?
  updatedAt         DateTime @updatedAt
}

model HomeUnivers {
  id        String   @id @default(uuid())
  title     String
  image     String
  link      String?
  isLocked  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
